<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">

  <Import Project="$(MSBuildThisFileDirectory)\Toolset.Common.props"/>

  <!--
    Define toolchain identifier and attributes.
  -->

  <PropertyGroup>

    <PlatformToolsetVersion>Clang11.0</PlatformToolsetVersion>

    <GccToolchainVersion>4.9</GccToolchainVersion>

    <LlvmVersion>11.0</LlvmVersion>

    <LlvmTargetTriple>$(TargetPlatformArchitectureLlvmPlatformTriple)$(AndroidNdkLevel)</LlvmTargetTriple>

  </PropertyGroup>

  <!--
    Compiler, Librarian and Linker tool paths
  -->

  <PropertyGroup>

    <PlatformToolsetToolchainFolder>$(AndroidNdkRoot)\toolchains\$(TargetPlatformArchitectureToolchainPrefix)-$(GccToolchainVersion)</PlatformToolsetToolchainFolder>

    <PlatformToolsetPrebuilt>$(PlatformToolsetToolchainFolder)\prebuilt\windows-x86_64</PlatformToolsetPrebuilt>

    <LlvmToolsetToolchainFolder>$(AndroidNdkRoot)\toolchains\llvm</LlvmToolsetToolchainFolder>

    <LlvmToolsetPrebuilt>$(LlvmToolsetToolchainFolder)\prebuilt\windows-x86_64</LlvmToolsetPrebuilt>

    <PlatformToolsetCompileTool>clang++.exe</PlatformToolsetCompileTool>

    <PlatformToolsetLibTool>llvm-ar.exe</PlatformToolsetLibTool>

    <PlatformToolsetLinkTool>clang++.exe</PlatformToolsetLinkTool>

    <PlatformToolsetStripTool>llvm-strip.exe</PlatformToolsetStripTool>

    <PlatformToolsetReadElfTool>llvm-readelf.exe</PlatformToolsetReadElfTool>

    <PlatformToolsetObjcopyTool>llvm-objcopy.exe</PlatformToolsetObjcopyTool>

    <PlatformToolsetCompileToolPath>$(LlvmToolsetPrebuilt)\bin</PlatformToolsetCompileToolPath>

    <PlatformToolsetLibToolPath>$(LlvmToolsetPrebuilt)\bin</PlatformToolsetLibToolPath>

    <PlatformToolsetLinkToolPath>$(LlvmToolsetPrebuilt)\bin</PlatformToolsetLinkToolPath>

    <PlatformToolsetStripToolPath>$(LlvmToolsetPrebuilt)\bin</PlatformToolsetStripToolPath>

    <PlatformToolsetReadElfToolPath>$(LlvmToolsetPrebuilt)\bin</PlatformToolsetReadElfToolPath>

    <PlatformToolsetObjcopyToolPath>$(LlvmToolsetPrebuilt)\bin</PlatformToolsetObjcopyToolPath>

    <PlatformToolsetSysRoot>$(LlvmToolsetPrebuilt)\sysroot</PlatformToolsetSysRoot>

    <PlatformToolsetGdbServer>$(AndroidNdkRoot)\prebuilt\android-$(TargetPlatformArchitecture)\gdbserver\gdbserver</PlatformToolsetGdbServer>

  </PropertyGroup>

  <!--
    Default include, tools and source directories. Also used by Intellisense.

    Additional default references to Android++'s internal toolchain setup here.
  -->

  <PropertyGroup>

    <ExecutablePath>$(LlvmToolsetPrebuilt)\bin;$(PlatformToolsetPrebuilt)\bin;$(AndroidPlusPlusToolchainRoot)\bin;$(ExecutablePath);$(PATH);</ExecutablePath>

    <IncludePath>$(PlatformToolsetSysRoot)\usr\include;$(LlvmToolsetPrebuilt)\include;$(IncludePath)</IncludePath>

    <ReferencePath>$(ReferencePath)</ReferencePath>

    <LibraryPath>$(PlatformToolsetSysRoot)\usr\lib;$(PlatformToolsetPrebuilt)\lib;$(LibraryPath)</LibraryPath>

    <SourcePath>$(SourcePath)</SourcePath>

    <ExcludePath>$(ExcludePath)</ExcludePath>

  </PropertyGroup>

  <!--
    Default C/C++ options. Taken from NDK toolchain setup.mk variants.
  -->

  <ItemDefinitionGroup>

    <ClCompile>

      <!-- -gcc-toolchain $(PlatformToolsetPrebuilt) -->
      <AdditionalOptions>-target $(LlvmTargetTriple) -fdiagnostics-format=msvc -fno-caret-diagnostics %(ClCompile.AdditionalOptions)</AdditionalOptions>

      <NoCanonicalPrefixes Condition="'%(ClCompile.NoCanonicalPrefixes)' == ''">true</NoCanonicalPrefixes>

    </ClCompile>

  </ItemDefinitionGroup>

  <!--
    Default linker options. Taken from NDK toolchain setup.mk variants.
  -->

  <ItemDefinitionGroup>

    <Link>

      <AdditionalOptions>-fuse-ld=lld -target $(LlvmTargetTriple) -MD -fdiagnostics-format=msvc -fno-caret-diagnostics %(ClCompile.AdditionalOptions)</AdditionalOptions>

      <NoCanonicalPrefixes Condition="'%(Link.NoCanonicalPrefixes)' == ''">true</NoCanonicalPrefixes>

    </Link>

  </ItemDefinitionGroup>

 </Project>
